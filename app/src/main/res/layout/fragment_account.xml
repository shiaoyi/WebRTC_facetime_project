<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="50dp"
    android:paddingRight="50dp"
    android:background="@drawable/new_login_gradients"
    tools:context="org.appspot.apprtc.AccountFragment">

    <!--<ImageView-->
    <!--android:id="@+id/ivBackground"-->
    <!--android:layout_width="1075dp"-->
    <!--android:layout_height="223dp"-->
    <!--android:layout_alignBottom="@+id/textView7"-->
    <!--android:layout_alignParentLeft="true"-->
    <!--android:layout_alignParentStart="true"-->
    <!--android:layout_gravity="center_horizontal"-->
    <!--android:background="@color/colorPrimary" />-->

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ivPersonPic"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/p01"/>

    <TextView
        android:id="@+id/tvChoserName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="125dp"
        android:text="William Bob"
        android:textColor="#FFFFFF"
        android:textSize="26sp"
        android:textStyle="bold" />

    <android.support.v7.widget.CardView
        android:id="@+id/ivMiddlebg"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="177dp"
        card_view:cardBackgroundColor="#08000000"
        card_view:cardCornerRadius="12dp"
        card_view:cardElevation="3dp">


        <TextView
            android:id="@+id/tvScored"
            android:layout_width="100dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="17dp"
            android:text="@string/already_score_count"
            android:textColor="@color/white"
            android:textSize="20sp" />


        <TextView
            android:id="@+id/tvChoserScored"
            android:layout_width="100dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="50dp"
            android:text="8"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <View
            android:layout_width="2dp"
            android:layout_height="60dp"
            android:layout_alignTop="@+id/tvScored"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="17dp"
            android:background="#ffffff" />

        <TextView
            android:id="@+id/tvBalance"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="right"
            android:layout_marginRight="25dp"
            android:layout_marginTop="17dp"
            android:text="@string/account_balance"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tvChoserBalance"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="right"
            android:layout_marginRight="25dp"
            android:layout_marginTop="50dp"
            android:text="180"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/tvNickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ivMiddlebg"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="301dp"
        android:drawableLeft="@drawable/male_24"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tvChoserNickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tvNickname"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/tvNickname"
        android:text="Bobby"
        android:textColor="@color/white"
        android:textSize="18sp" />


    <TextView
        android:id="@+id/tvEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ivMiddlebg"
        android:layout_alignRight="@+id/tvNickname"
        android:layout_below="@+id/tvNickname"
        android:layout_marginBottom="20dp"
        android:drawableLeft="@drawable/email_24"
        android:textColor="@color/white"
        android:textSize="20sp" />


    <TextView
        android:id="@+id/tvChoserEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tvEmail"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/tvEmail"
        android:text="william@gmail.com"
        android:textColor="@color/white"
        android:textSize="18sp" />


    <TextView
        android:id="@+id/tvLang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/tvEmail"
        android:layout_below="@+id/tvEmail"
        android:layout_marginBottom="20dp"
        android:drawableLeft="@drawable/globe_24"
        android:textColor="@color/white"
        android:textSize="20sp" />


    <TextView
        android:id="@+id/tvChoserLang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tvLang"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/tvLang"
        android:text="@string/language_chinese"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tvLove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/tvLang"
        android:layout_below="@+id/tvLang"
        android:layout_marginBottom="20dp"
        android:drawableLeft="@drawable/love_24"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tvChoserLove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tvLove"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/tvLove"
        android:text="3"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btnSeeLove"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tvChoserLove"
        android:layout_alignRight="@+id/ivMiddlebg"
        android:layout_marginBottom="-15dp"
        android:background="@android:color/transparent"
        android:text="@string/view_List"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="13sp" />


</RelativeLayout>
